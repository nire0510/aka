{
  "env": {
    "browser": false,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0,
    "arrow-parens": ["error", "always"],
    "prefer-const": 2,
    "no-process-exit": 0,
    "no-magic-numbers": ["error", {
      "ignore": [-1, 0, 1, 2, 3]
    }],
    "prefer-destructuring": ["off"],
    "curly": "error",
    "brace-style": ["error", "stroustrup"],
    "max-len": ["error", 120],
    "nonblock-statement-body-position": ["error", "below"],
    "prefer-promise-reject-errors": 0,
    "valid-jsdoc": "error",
    "no-eval": "error",
    "no-plusplus": 0,
    "no-bitwise": 0,
    "no-param-reassign": 1,
    "operator-linebreak": ["error", "after"],
    "newline-before-return": "error",
    "newline-after-var": "error",
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": ["block"],
        "next": "*"
      }
    ]
  }
}
